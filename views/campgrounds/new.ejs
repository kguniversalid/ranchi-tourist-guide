                <label class="form-label" for="latitude">Latitude</label>
                <input class="form-control" type="number" id="latitude" name="campground[latitude]"
                    required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="longitude">Longitude</label>
                <input class="form-control" type="number" id="longitude" name="campground[longitude]"
